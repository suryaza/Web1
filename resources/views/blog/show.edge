<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Data Siswa</title>
    <!-- Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
    <style>
      body {
        padding: 20px;
      }
    </style>
  </head>
  
  <body>
    <h1>https://bit.ly/pptadonisjs</h1>

    <div>
      <h3>Kelas</h3>
      <form
        id="kelas-form"
        action="{{ route('Blogs.update', { id: blog?.id }) }}"
        method="POST"
      >
        <div style="margin-bottom: 10px">
          <label for="judul">Judul:</label>
          <input
            type="text"
            id="judul"
            name="judul"
            value="{{ blog?.judul }}"
            required
          />
        </div>
        <div style="margin-bottom: 10px">
          <label for="isi">Isi:</label>
          <input
            type="text"
            id="isi"
            name="isi"
            value="{{ blog?.isi }}"
            required
          />
        </div>
        <div style="margin-bottom: 10px">
          <label for="cover">Cover</label>
          <input
            type="text"
            id="cover"
            name="cover"
            value="{{ blog?.cover }}"
            required
          />
        </div>
        <div style="margin-bottom: 10px">
          <label for="like">Like</label>
          <input
            type="text"
            id="like"
            name="like"
            value="{{ blog?.like }}"
            required
          />
        </div>
        <button type="submit" style="margin-bottom: 10px">edit</button>
      </form>
    </div>

    <!-- Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const kelasForm = document.getElementById("kelas-form");
        const kelasModal = document.getElementById("kelasModal");
        const overlay = document.getElementById("overlay");

        // kelasForm.addEventListener("submit", function (event) {
        //   event.preventDefault();

        //   closeModal();
        // });

        window.openModal = function () {
          kelasModal.style.display = "block";
          overlay.style.display = "block";
        };

        window.closeModal = function () {
          kelasModal.style.display = "none";
          overlay.style.display = "none";
          kelasForm.reset();
        };
      });
    </script>
    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  </body>
</html>
